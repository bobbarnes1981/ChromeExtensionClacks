{
    "manifest_version": 2,

    "name": "ChromeExtensionClacks",
    "description": "Detect clacks overhead and display in chrome",
    "version": "1.0",

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Clacks",
        "default_icon": "icon_disabled.png"
    },
    
    "permissions": [
        "activeTab",
        
        "webRequest",
        "*://*/",
        
        "tabs"
    ]
}